<%- include('./Head.ejs'); %>

<div class="mod_box" style="padding-top: 0px;">

    <div class="user_info">
        <ul>
            <li>
                <h2>共上课数目</h2>
                <p><%- stuClass.length %></p>
                <div class="mod_but">
                    <a href="/Teacher/CourseSelect">去选课</a>
                </div>
            </li>
        </ul>
    </div>

    <h1 style="margin: 0 auto;text-align: center">您选的课有</h1>

    <div class="user_live">
        <table border="0" cellspacing="0" cellpadding="0" class="user_live_tabel">
            <tbody>
            <tr class="nohover">
                <th>课程名</th>
                <th>学分</th>
                <th>课程类型</th>
                <th>课号</th>
                <th>操作</th>
            </tr>
            <% stuClass.forEach(function(i){ %>
                <tr>
                    <td><%- i.c_name %></td>
                    <td><%- i.credit %></td>
                    <td><%- i.cc_name %></td>
                    <td><%- i.c_no %></td>
                    <td>
                        <button type="button" class="layui-btn layui-btn-primary layui-border-red"
                                href="javascript:void(0)" onclick="DropClass(<%- i.pcl_id %>)">我要退课
                        </button>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</div>

<div class="login_copy">狗腿子有限公司 版权所有保留一切权利</div>
</body>
<script src="/layui-v2.6.8/layui/layui.js" type="text/javascript"></script>
<script>
    layui.use(['layer'], function () {
        var $ = layui.jquery, layer = layui.layer;
        window.DropClass = function (pcl_id) {
            $.get('/Teacher/DropClass?pcl_id=' + pcl_id,
                function (res) {
                    layer.msg(res);
                    window.location.reload();
                });
        }
    });
</script>
