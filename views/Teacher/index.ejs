        font-size: 0;
    }

    .menu_znms li {
        position: relative;
        display: inline-block;
        *display: inline;
        *zoom: 1;
        font-size: 14px;
    }

    .menu_znms > li {
        margin: 0 0 0 -1px;
        text-align: center;
    }

    .menu_znms li a {
        display: block;
        color: #fff;
        font-size: 14px;
        *display: inline;
        *zoom: 1;
    }

    .menu_znms li a:hover, .menu_znms .menu_hov {

    }

