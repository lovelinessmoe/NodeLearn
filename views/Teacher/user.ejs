<%- include('./Head.ejs'); %>

<div class="mod_box" style="padding-top: 0px;">
    <div class="layui-tab layui-tab-brief" lay-filter="docDemoTabBrief">
        <ul class="layui-tab-title">
            <li class="layui-this">个人信息设置</li>
            <li>修改密码</li>
        </ul>
        <div class="layui-tab-content">
            <div class="layui-tab-item layui-show">
                <!--用户信息-->
                <form class="layui-form" action="" id="EditInfo">
                    <table class="repair_self" border="0" cellspacing="0" cellpadding="0">
                        <tbody>
                        <tr>
                            <td class="right_txt_self">
                                <label>名字:</label>
                            </td>
                            <td>
                                <input id="t_name" name="t_no" class="repair_input" type="text"
                                       value="<%- teacher.t_name %>" disabled="disabled"
                                       size="25" maxlength="32">
                            </td>
                            <td class="right_txt_self">
                                <label>工号</label>
                            </td>
                            <td>
                                <input id="t_no" name="t_no" class="repair_input" type="text"
                                       value="<%- teacher.t_no %>"
                                       disabled="disabled"
                                       size="25" maxlength="32">
                            </td>
                        </tr>
                        <tr>
                            <td class="right_txt_self">
                                <label>个人签名</label>
                            </td>
                            <td colspan="3">
                                    <textarea name="desc" required lay-verify="required" class="layui-textarea">
                                        <%- teacher.desc %>
                                    </textarea>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="text_center">
                        <button class="layui-btn" lay-submit lay-filter="EditInfo">确认修改</button>
                    </div>
                </form>
            </div>
            <div class="layui-tab-item">
                <!--修改密码-->
                <div>
                    <form id="EditPwd">
                        <table class="repair_self width50" border="0" cellspacing="0" cellpadding="0">
                            <tbody>
                            <tr>
                                <td class="right_txt_self">原密码</td>
                                <td><input name="originalPassWord" id="originalPassWord" type="password"
                                           class="repair_input">
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td class="right_txt_self">新密码</td>
                                <td>
                                    <input name="passWord" id="passWord" type="password"
                                           class="repair_input password_rule_tip">
                                </td>
                            </tr>
                            <tr>
                                <td class="right_txt_self">确认新密码</td>
                                <td><input name="confirmPassword" id="confirmPassword" type="password"
                                           class="repair_input">
                                </td>
                                <td></td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="text_center">
                            <button class="layui-btn" lay-submit lay-filter="EditPwd">确认修改</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
